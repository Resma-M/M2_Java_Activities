
import java.util.Scanner;

public class cricket {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		      Scanner my_scan = new Scanner(System.in);
		      
		      System.out.println("Enter the team name");
		      String teamname = my_scan.nextLine();
		     	      
		      System.out.println("Enter session");
		      String iningsname = my_scan.nextLine();
		            		     
		      System.out.println("Enter runs ");
		      int runs = my_scan.nextInt();
		      
		      System.out.println("Name "+teamname);
		      System.out.println("Scored "+runs);
		     
		      if (iningsname .equals("first")) 
		      {
		    	  
		    	  runs = runs + 1;
		    	  System.out.println("Needed runs to win: "+runs);
		    	  	    	 
		    	} 
		      else if (iningsname .equals("second")) 
		      {
		    	  System.out.println("Match Ended");
		    	} 
		      else 
		      {
		    	  System.out.println("Invalid input");
		    	}
     }
 }
